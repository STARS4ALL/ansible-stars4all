# {{ ansible_managed }}
{{ new_tdb_dbase_dir }}/tess.db {
    su {{ new_tdb_runtime_user }} {{ new_tdb_runtime_user }}
    copy
    daily
    dateext
    rotate 1
    missingok
    notifempty
    prerotate
        /usr/bin/systemctl kill -s USR1 tessdb.service > /dev/null 2>/dev/null || true
        {{ new_tdb_sleep | default("/bin/sleep") }} 2 || true
    endscript
    postrotate
        /usr/bin/systemctl kill -s USR2 tessdb.service > /dev/null 2>/dev/null || true 
    endscript
}

{{ new_tdb_root }}/var/log/tessdb.log {
    su root root
    daily
    dateext
    rotate {{ new_tdb_log_rotate | default(30) }}
    missingok
    notifempty
#   compress
#   delaycompress
    copytruncate
}
