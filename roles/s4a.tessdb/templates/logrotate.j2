# {{ ansible_managed }}
{{ tessdb_dbase_dir }}/tess.db {
    su root root
	copy
	daily
	dateext
	rotate 1
	missingok
	notifempty
	prerotate
		/usr/local/bin/tessdb_pause > /dev/null 2>/dev/null || true
		/bin/sleep 2 || true
	endscript
	postrotate
		/usr/local/bin/tessdb_resume > /dev/null 2>/dev/null 
		/usr/local/bin/tessdb_index.sh {{ tessdb_dbase_dir }}/tess.db-\* > /dev/null 2>/dev/null || true
	endscript
}

/var/log/tessdb.log {
	su root root
	daily
	dateext
	rotate 30
	missingok
	notifempty
#	compress
#	delaycompress
	copytruncate
}
